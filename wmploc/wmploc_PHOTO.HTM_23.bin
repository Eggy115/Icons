<html>
<head>
<meta http-equiv="content-type" content="text/html;charset=utf-8">
</head>
<body leftmargin=0 rightmargin=0 topmargin=0 bottommargin=0 style="overflow:hidden">

<center>
<img id="TheImage" onload="onImageLoad()">
</center>

<script language="JScript">
window.onresize = function()
{
    doResize();
}

window.onload = function()
{
    document.body.style.backgroundColor = window.external.appColorLight;
}

var origX = 0;
var origY = 0;

function onImageLoad()
{
    origX = TheImage.width;
    origY = TheImage.height;
    doResize();
}

function doResize()
{
    if ((0 == origX) || (0 == origY))
    {
        return;
    }

    deltaX = (document.body.clientWidth * 1.0) / origX;
    deltaY = (document.body.clientHeight * 1.0) / origY;
    useDelta = Math.min(deltaX, deltaY);
    newWidth = Math.round(origX * useDelta);
    newHeight = Math.round(origY * useDelta);
    if ((newWidth <= origX) && (newHeight <= origY))
    {
        TheImage.width = newWidth;
        TheImage.height = newHeight;
    }
    else
    {
        TheImage.width = origX;
        TheImage.height = origY;
    }
}

</script>

</body>
</html>
